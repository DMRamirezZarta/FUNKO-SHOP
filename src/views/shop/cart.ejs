<%- include('../partials/header.ejs') %>

<main class="container cart__main"">
    <h2 class=" cart__title">CARRITO DE COMPRAS</h2>

    <div class="cart__header">
        <p>DETALLE DE PRODUCTO</p>
        <p>CANTIDAD</p>
        <p>TOTAL</p>
    </div>

    
    <ul id="card_[object Object],[object Object]" class="cart__component-container">
        <li class="cart__component">
            <article>
                <img src="../../img/pokemon/pidgeotto-1.webp" alt="Figura Funko">
                <div class="cart__component-info">
                    <p class="cart__component-title">
                        Pidgeotto
                    </p>
                    <p class="cart__component-licence">
                        Pokemon
                    </p>
                    <p class="cart__component-price">Precio unitario: $ 34.990,00</p>
                </div>
            </article>

            <div class="cart__component-quantity-container">
                <div class="cart__component-quantity">
                    <input id="quantity_7" class="item__input" type="text" name="quantity"
                        value="1">
                    <button onclick="addToCart('7', '1', 1)" id="add_7"
                        class="cart__component-quantity-button" type="button">+</button>
                    <button onclick="addToCart('7', '1', -1)" id="subtract_7" class="cart__component-quantity-button"
                        type="button">-</button>
                </div>
            </div>

            <p class="cart__component-price-total">
                $ 34.990,00
            </p>

            <form action="./cart2.html/7?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="cart__button-cancel">
                    <iconify-icon icon="octicon:x-circle-16"></iconify-icon>
                </button>
            </form>

        </li>
    </ul>

    
    <ul id="card_[object Object],[object Object]" class="cart__component-container">
